<IfModule mod_rewrite.c>
    RewriteEngine On

    # Protect .env file
    <Files .env>
        Order allow,deny
        Deny from all
    </Files>

    # Handle root redirect to app/public without showing /app/public in URL
    RewriteCond %{REQUEST_URI} !^/app/public
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ app/public/$1 [L]

    # Special rule for webhook routes (if needed)
    # RewriteCond %{REQUEST_URI} ^/user/webhook/paystack [NC]
    # RewriteRule ^ - [L]
</IfModule>

